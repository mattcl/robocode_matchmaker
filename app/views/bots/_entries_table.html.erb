<table class="detail-table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Winner</th>
      <th>Rank</th>
      <th>Total Score</th>
      <th data-tooltip class="has-tip" title="Robots score 1 point fore each point of damage they do to enemies">Bullet Dmg</th>
      <th data-tooltip class="has-tip" title="When a robot kills an enemy, it scores an additional 20 percent of all the damage it did to that enemy">Bullet Bonus</th>
      <th data-tooltip class="has-tip" title="Robots score 2 points for each point of damage they cause by ramming enemies">Ram Dmg</th>
      <th data-tooltip class="has-tip" title="When a robot kills an enemy by ramming, it scores an additional 30 percent of all the damage it did to that enemy">Ram Bonus</th>
      <th data-tooltip class="has-tip" title="Each robot that's still alive scores 50 points every time another robot dies">Survival</th>
      <th data-tooltip class="has-tip" title="Currently always 0">Survival Bonus</th>
      <th>1st</th>
      <th>2nd</th>
      <th>3rd</th>
      <th></th>
    </tr>
  </thead>
  <% entries.each do |entry| %>
    <tr>
      <td><%= entry.match.category.name %></td>
      <% winner = entry.match.winner.bot %>
      <td><%= link_to winner.proper_name, bot_path(winner) %></td>
      <td><%= entry.rank %></td>
      <td><%= entry.total_score %></td>
      <td><%= entry.bullet_damage %></td>
      <td><%= entry.bullet_bonus %></td>
      <td><%= entry.ram_damage %></td>
      <td><%= entry.ram_bonus %></td>
      <td><%= entry.survival %></td>
      <td><%= entry.survival_bonus %></td>
      <td><%= entry.firsts %></td>
      <td><%= entry.seconds %></td>
      <td><%= entry.thirds %></td>
      <td><%= link_to 'more', match_path(entry.match_id) %></td>
    </tr>
  <% end %>
</table>

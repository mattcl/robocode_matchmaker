<div class="row">
  <div class="large-11 large-centered column">
    <h1>Matches</h1>
    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th>Bots</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <% @matches.each do |match| %>
        <tr>
          <td><%= match.category.name %></td>
          <td>
            <% match.entries.each do |entry| %>
              <div class="<%= 'match-winner' if entry.rank == 1%>">
                <%= entry.bot.proper_name %>
              </div>
            <% end %>
          </td>
          <td><%= match.status %></td>
          <td><%= link_to('details', match_path(match)) unless match.finished_at.nil? %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
